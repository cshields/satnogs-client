#!/usr/bin/env python
import time
import logging

from satnogsclient.settings import (SCHEDULER_SLEEP_TIME, NETWORK_API_QUERY_INTERVAL,
                                    NETWORK_API_POST_INTERVAL)
from satnogsclient.scheduler import scheduler
from satnogsclient.scheduler.tasks import get_jobs, post_data


if __name__ == '__main__':
    logging.basicConfig()
    scheduler.add_job(get_jobs, 'interval', minutes=NETWORK_API_QUERY_INTERVAL)
    scheduler.add_job(post_data, 'interval', minutes=NETWORK_API_POST_INTERVAL)
    scheduler.start()

    try:
        print('Press Ctrl+C to exit SatNOGS poller')
        while True:
            time.sleep(SCHEDULER_SLEEP_TIME)
    except (KeyboardInterrupt, SystemExit):
        scheduler.shutdown()
